        <span class="text-secondary total-qty display-5">0</span>
      </div>
      <span class="display-5 ms-3">/</span>
      <span class="text-dark display-5 order-amount">0.00</span>


      <!-- left menu -->
      <!-- for dark bg user this class 'text-bg-dark' on the id 'offcanvasWithBothOptions' -->
      <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel" style="width: 220px;">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Menu</h5>
          <!-- use this class on button for dark bg ' btn-close-white' -->
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <!-- use this style on ul for dark bg.  style="--bs-list-group-color: unset !important; --bs-list-group-bg: unset !important;" -->
          <ul class="list-group list-group-flush text-secondary bg-transparent">
            <a href="/apps/app" class="list-group-item ebs-link">Home</a>
            <a href="/apps/app/partys" class="list-group-item ebs-link">Partys</a>
            <a href="/apps/app/dues" class="list-group-item ebs-link">Party Dues</a>
            <a href="/apps/app/orders" class="list-group-item ebs-link">Orders</a>
            <a href="/apps/app/closing" class="list-group-item ebs-link">Closing</a>
            <a href="/apps/app/stock" class="list-group-item ebs-link">Stock</a>
            <a href="/apps/app/pymts" class="list-group-item ebs-link">Payments</a>
            <a href="/apps/app/expense" class="list-group-item ebs-link">Expense</a>
            <a href="/apps/app/sales" class="list-group-item ebs-link">Sales</a>
            <a href="/apps/app/purch" class="list-group-item ebs-link">Purchase</a>
            <a href="/apps/app/sold" class="list-group-item ebs-link">Solds</a>
            <a href="/signout" class="list-group-item ebs-link">Logout</a>
          </ul>
        </div>
      </div>
    </div>

