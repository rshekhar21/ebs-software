<div class="container-fluid d-lg-none p-0 bg-cart">
  <div class="d-flex flex-column dvh-100">

    <div class="d-flex jcb aic p-2">
      <span class="fs-5">EBS</span>
      <div class="dropdown">
        <span class="role-btn bg-white ps-5" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-three-dots-vertical"></i>
        </span>
        <ul class="dropdown-menu dropdown-menu-end text-end">
          <li><span class="dropdown-item role-btn">Hold</span></li>
          <li><span class="dropdown-item role-btn">Unhold</span></li>
          <li><span class="dropdown-item role-btn">Clear All</span></li>
          <li><span class="dropdown-item role-btn">Reset Data</span></li>
          <li><span class="dropdown-item role-btn">View Last Order</span></li>
        </ul>
      </div>
    </div>

    <!-- header with qty/amount -->
    <div class="rounded-top bg-light p-2 d-flex gap-2 justify-content-between align-items-center order-qty-amount">
      <span class="role-btn me-auto" title="menu" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368">
