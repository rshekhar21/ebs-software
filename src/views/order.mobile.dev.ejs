    <!-- add articles -->
    <div class="d-flex flex-column position-relative position-fixed top-0 end-0 h-100 w-100 z-3 add-mobile-articles d-none">
      <!-- search/add manually -->
      <div class="position-relative p-2 d-flex flex-column gap-2 w-100 h-100 z-3 bg-items">
        <div class="btn-group btn-group-lg btn-group-add-manually">
          <button class="btn btn-outline-success w-50 ebs-add-stock">+ Stock</button>
          <button class="btn btn-outline-success w-50 ebs-add-manually">+ Manually</button>
        </div>

        <!-- search -->
        <div class="ebs-search-items">
          <!-- scan comming soon warning -->
          <div class="position-relative my-1 bg-light rounded text-center position-fixed bottom-0 end-0 m-3 p-2 ebs-scan-msg d-none">
            <span class="text-secondary word-wrap" style="font-size: 0.8rem;">SCAN feature coming soon! Currently, enter SKU for item nsertion.</span>
            <button class="btn btn-close position-absolute end-0 translate-middle-y ebs-close-scan-waring" style="top: -15px"></button>
          </div>
          <!-- input search -->
          <div class="position-relative">
            <input type="text" class="form-control form-control-lg w-100" id="ebsSearchItems" placeholder="Enter Article Name">
            <input type="number" class="form-control form-control-lg w-100 d-none" id="ebsScanItems" placeholder="Enter SKU">
            <button class="btn btn-light me-1 position-absolute top-50 end-0 translate-middle-y ebs-scan-sku"><i class="bi bi-upc-scan"></i></button>
          </div>
        </div>

        <!-- search results -->
        <div class="d-flex flex-column gap-1 overflow-auto rounded z-3 h-100 ebs-search-item-results d-none">
          <div class="results p-2 h-auto overflow-auto">
            <div class="d-flex flex-column gap-1 small">
              <div class="d-flex jcb aic gap-2 border-bottom">
                <span class="me-auto">Article</span>
                <span class="">Avl.</span>
                <span class="fw-500">Price</span>
              </div>
            </div>
          </div>
          <!-- search viatls -->
          <div class="result-details d-flex justify-content-between bg-light align-items-center p-2 mt-auto">
            <span class="small text-secondary">Showing<span class="ebs-entries-found ms-1 fw-bold"></span>/25 Max Entries</span>
            <button class="btn btn-close close-ebs-search-item-results"></button>
          </div>
        </div>

        <!-- search close button -->
        <button class="btn btn-sm btn-outline-danger me-auto mt-auto mb-2 ms-2 ebs-close-add-items"><i class="bi bi-x-lg"></i></button>

        <!-- manual form -->
        <div class="position-fixed top-0 start-0 w-100 h-100 p-2 bg-white overflow-auto ebs-manual-form d-none">
          <form action="" class="mb-0 d-flex flex-column gap-2" id="ebsMobileManualForm">
            <div class="form-floating">
              <input type="text" class="form-control" id="mobileProduct" placeholder="Article Name">
              <label for="mobileProduct">Article Name</label>
            </div>
            <div class="input-group">
              <div class="form-floating">
                <input type="number" step="0.00" class="form-control" id="mobilePrice" placeholder="Price">
                <label for="mobilePrice">Price</label>
              </div>
              <div class="form-floating">
                <input type="number" step="0.00" class="form-control" id="mobileQty" placeholder="Quantity">
                <label for="mobileQty">Quantity</label>
              </div>
            </div>

            <!-- extra inputs -->
            <div class="d-flex flex-column gap-2 more-fields d-none">
              <div class="input-group">
                <div class="form-floating">
                  <input type="text" step="0.00" class="form-control" id="mobileSize" placeholder="Size">
                  <label for="mobileSize">Size</label>
                </div>
                <div class="form-floating">
                  <input type="number" step="0.00" class="form-control" id="mobileGst" placeholder="GST">
                  <label for="mobileGst">GST</label>
                </div>
              </div>
              <div class="input-group">
                <div class="form-floating">
                  <input type="number" step="0.00" class="form-control" id="mobileDisc" placeholder="Discount">
                  <label for="mobileDisc">Discount</label>
                </div>
                <div class="form-floating">
                  <input type="number" step="0.00" class="form-control" id="mobileDiscper" placeholder="Disc %">
                  <label for="mobileDiscper">Disc %</label>
                </div>
              </div>
              <div class="input-group">
                <div class="form-floating">
                  <input type="number" class="form-control" id="mobileHsn" placeholder="HSN">
                  <label for="mobileHsn">HSN</label>
                </div>
                <div class="form-floating">
                  <input type="text" class="form-control" id="mobileUnit" placeholder="UNIT">
                  <label for="mobileUnit">UNIT</label>
                </div>
              </div>
            </div>

            <!-- manual form control buttons -->
            <div class="btn-group btn-group-lg w-100 mt-3">
              <button type="button" class="btn btn-outline-primary toggle-morefields"><i class="bi bi-chevron-expand"></i></button>
              <button type="button" class="btn btn-outline-primary reset-mobile"><i class="bi bi-arrow-repeat"></i></button>
              <button type="button" class="btn btn-outline-primary close-mobile"><i class="bi bi-x-lg"></i></button>
              <button type="submit" class="btn btn-outline-primary apply-mobile"><i class="bi bi-check2-all"></i></button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- show order items -->
    <div class="d-flex flex-column gap-2 rounded-bottom h-75 overflow-auto billed-items">
      <div class="d-flex flex-column p-2 overflow-auto h-100" style="background-color: rgba(255, 255, 255, 0.857);">
        <ul class="items-list list-group list-group-flush"></ul>
      </div>
      <div class="d-flex jcb aic small bg-light rounded-bottom mt-auto p-2"></div>
    </div>

    <!-- order details -->
    <div class="d-flex flex-column gap-2 rounded-bottom h-75 overflow-auto continue-order d-none">
      <div class="d-flex flex-column p-2 overflow-auto h-100" style="background-color: rgba(255, 255, 255, 1); gap: 2.4rem;">
        <!-- current party -->
        <div class="d-flex jcb aic">
          Party
          <span class="party-name fw-bold"></span>
        </div>

        <!-- add party -->
        <div class="d-flex jcb aic">
          Add / Search Party
          <div class="btn-group btn-group-sm w-50">
            <button class="btn btn-outline-secondary srch-party"><i class="bi bi-search"></i></button>
            <button class="btn btn-outline-secondary add-party">Add</button>
          </div>
        </div>

        <!-- search party -->
        <div class="d-flex flex-column gap-4 position-fixed p-2 top-0 end-0 w-100 bg-white srch-party z-5 d-none" style="height: 100dvh;">
          <div class="input-group">
            <input type="search" name="" id="srchParty" class="form-control form-control-lg" placeholder="Search Party by Name / Contact">
            <span class="input-group-text role-btn sync-partys"><i class="bi bi-arrow-clockwise"></i></span>
          </div>
          <div class="party-results d-none"></div>
          <button class="btn-close mt-auto ms-auto mb-4 me-4 close-add-party"></button>
        </div>

        <!-- set order date -->
        <div class="d-flex jcb aic">
          Set Order Date
          <input type="date" name="" id="set_order_date" class="form-control set-order-date w-50">
        </div>

        <!-- set bill number -->
        <div class="d-flex jcb aic">
          Bill Number
          <div class="input-group input-group-sm w-50">
            <input type="text" name="" id="setBillNumber" class="form-control set-order-date w-50" placeholder="Bill Number">
            <span class="input-group-text role-btn w-30">Apply</span>
          </div>
        </div>

        <!-- add discount -->
        <div class="d-flex jcb aic">
          Add Disount
          <button class="btn btn-sm btn-outline-secondary add-disc w-50">Discount</button>
        </div>

        <!-- disc received -->
        <div class="d-flex jcb aic">
          Discount
          <div class="input-group input-group-sm w-50">
            <input type="text" name="" id="editDisc" class="form-control disc-received w-50 " readonly>
            <span class="input-group-text role-btn w-30">Edit</span>
          </div>
        </div>
        
        <!-- collect payment -->
        <div class="d-flex jcb aic">
          Collect Payment
          <button class="btn btn-sm btn-outline-secondary add-pymt w-50">+ Pymt</button>
        </div>

        <!-- pymt received -->
        <div class="d-flex jcb aic">
          Payment
          <div class="input-group input-group-sm w-50">
            <input type="text" name="" id="editPymt" class="form-control pymt-received w-50 " readonly>
            <span class="input-group-text role-btn w-30">Edit</span>
          </div>
        </div>          

      </div>
    </div>

    <!-- finish order -->
    <div class="d-flex flex-column gap-2 rounded-bottom h-75 overflow-auto finish-order bg-white d-none">
      <div class="text-center fw-bold my-5">Order Summary</div>
    </div>  

