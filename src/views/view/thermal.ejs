<html>

<head>
  <meta charset="utf-8">
  <link type="image/png" sizes="32x32" rel="icon" href="/img/favicon.png" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <title>EBS Mobile1</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/styles/main.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <style>
    @page { margin: 0mm; }
    html { background-color: #FFFFFF; margin: 0; }
    body {
      margin: 0 auto;
      padding: 10px;
      font-family: Verdana, Geneva, Tahoma, sans-serif, sans-serif;
      font-size: 0.9rem !important;
      font-weight: 300;
      line-height: 1.2;
      color: black;
      max-width: 450px;
      min-width: 58mm;
    }
    .role-btn { cursor: pointer; }
    .text-black { color: black !important; }
    .fw-500 { font-weight: 500 !important; }
    @media print {
      body, .view-order {
        margin: 0;
        padding: 10px;
        font-family: Verdana, Geneva, Tahoma, sans-serif, sans-serif;
        font-size: 0.7rem !important;
        font-weight: 300;
        line-height: 1.2;
        color: black;
        max-width: 80mm;
        min-width: 58mm;
      }
    }
  </style>

</head>

<body>
  <!-- full screen loading -->
  <div class="d-flex jcc aic vh-100 w-100 z-5 position-fixed top-0 start-0 d-none" id="loading" style="background-color: rgba(245, 245, 245, 0.729);">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <!-- control menu -->
  <div class="btn-group d-print-none mb-2 w-100">
    <button class="btn btn-outline-secondary" id="printPage" title="Print Page"><i class="bi bi-printer"></i></button>
    <button class="btn btn-outline-secondary d-none" id="setPrinter" title="Set Printer"><i class="bi bi-gear"></i></button>
    <button class="btn btn-outline-secondary close" title="Close"><i class="bi bi-x-lg"></i></button>
  </div>

  <!-- loading -->
  <div class="container d-flex jcc aic status h-75">
    <div class="spinner-border text-primary mx-auto" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <!-- order details -->
  <div class="container-md view-order py-2 px-3 d-none" style="min-width: 200px; max-width: 500px; color: black">
    <div class="d-flex jcc aic flex-column">
      <div class="d-flex flex-column text-center entity d-none"></div>

      <div class="d-flex flex-column mb-3 w-100 party"></div>

      <div class="d-flex jcb aic fw-500 bg-light py-1 mb-2 w-100">
        <span>PARTICULARS</span>
        <span>AMOUNT</span>
      </div>

      <div class="items w-100"></div>

      <div class="totals my-4 w-100"></div>

      <div class="text-center comments"></div>
    </div>
  </div>

  <div class="small text-center mx-auto inv-msg mb-3" style="width: 80mm;"></div>
  <div class="text-center">***********</div>

  <script src="/js/thermal.js" type="module"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>