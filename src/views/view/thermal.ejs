<html>

<head>
  <meta charset="utf-8">
  <link type="image/png" sizes="32x32" rel="icon" href="/img/favicon.png" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <!-- <title>EBS Mobile</title> -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/styles/main.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <style>
    @page {
      margin: 0mm;
    }

    html {
      background-color: #FFFFFF;
      margin: 0;
    }

    body {
      margin: 0 auto;
      padding: 10px;
      font-family: Verdana, Geneva, Tahoma, sans-serif, sans-serif;
      font-size: 0.7rem !important;
      font-weight: 300;
      line-height: 1.3;
      color: black;
    }

    .role-btn {
      cursor: pointer;
    }

    .text-black {
      color: black !important;
    }

    .fw-500 {
      font-weight: 500 !important;
    }

    .tbl-custom {
      font-size: 0.7rem;
    }

    @media print {
      body {
        margin: 0mm;
        padding: 0 5px;
        max-width: 80mm;
        min-width: 58mm;
        font-size: 0.7rem !important;
        color: black !important;
      }

      .view-order {
        width: 75mm;
        color: black !important;
      }

      .tbl-custom {
        font-size: 0.7rem !important;
      }
    }
  </style>

</head>

<body>
  <!-- full screen loading -->
  <div class="d-flex jcc aic vh-100 w-100 z-5 position-fixed top-0 start-0 status d-print-none" id="loading" style="background-color: rgba(245, 245, 245, 0.729);">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <!-- order details -->
  <div class="container-md view-order py-2 px-3 d-none">
    <div class="btn-group my-2 w-100 tool-bar d-none d-print-none">
      <button class="btn btn-outline-secondary" id="printPage" title="Print Page"><i class="bi bi-printer"></i></button>
      <button class="btn btn-outline-secondary" id="setPrinter" title="Set Printer"><i class="bi bi-gear"></i></button>
      <button class="btn btn-outline-secondary close" title="Close"><i class="bi bi-x-lg"></i></button>
    </div>

    <div class="d-flex jcc aic flex-column mb-2">
      <div class="d-flex flex-column text-center entity d-none"></div>

      <div class="d-flex flex-column mb-3 w-100 party"></div>

      <div class="d-flex jcb aic fw-500 bg-light py-1 mb-2 w-100">
        <span>PARTICULARS</span>
        <span>AMOUNT</span>
      </div>

      <div class="items w-100"></div>
      <div class="totals mt-4 w-100"></div>
    </div>

    <div class="text-center comments"></div>
    <div class="text-center mx-auto inv-msg pt-1 my-2" style="white-space: pre-wrap; border-top: 1px solid black;"></div>
    <div class="text-center">***********</div>
  </div>

  <script src="/js/thermal.js" type="module"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>